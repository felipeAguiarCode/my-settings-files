{
  "explorer.compactFolders": false,
  "explorer.autoReveal": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "ormconfig.json": "ormconfig.sample.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  //terminal
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontFamily": "Operator Mono",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.defaultProfile.osx": "",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  //"terminal.integrated.defaultProfile.windows": "Ubuntu-20.04 (WSL)",
  "terminal.integrated.cwd": "${workspaceFolder}/",

  //editor
  "editor.fontFamily": "Fira code",
  "editor.fontWeight": "600",
  "editor.fontLigatures": true,
  "editor.fontSize": 20, //22,
  "editor.lineHeight": 1.6,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.renderLineHighlight": "line",
  "editor.accessibilityPageSize": 22,
  "editor.tabCompletion": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.formatOnSave": true,
  // "editor.scrollbar.vertical": "hidden",
  // "editor.scrollbar.horizontal": "hidden",
  "editor.rulers": [70, 120],

  //window
  "window.title": "${rootName}${separator}", //${activeEditorMedium}",
  "window.zoomLevel": 1,
  "window.menuBarVisibility": "compact",
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,

  //workbench
  "workbench.editor.empty.hint": "hidden",
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": false,
  "workbench.editor.labelFormat": "default",
  // "workbench.editor.labelFormat": "short",
  "workbench.colorCustomizations": {
    "sideBar.foreground": "#e4e4e4"
  },
  "workbench.colorTheme": "Hack The Box",
  "workbench.editorAssociations": {},

  "[python]": {
    "editor.formatOnType": true
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnType": false
  },
  "symbols.folders.associations": {
    "backend": "folder-gray",
    "frontend": "folder-gray-code",
    ".docs": "folder-gray-outline",
    "entities": "folder-assets",
    "infra": "folder-app",
    "schemas": "folder-purple",
    "controllers": "folder-yellow",
    "services": "folder-yellow",
    "hooks": "folder-yellow",
    "factories": "folder-yellow",
    "repositories": "folder-yellow",
    "routes": "folder-yellow"
  },
  "symbols.hidesExplorerArrows": false,
  "symbols.files.associations": {
    "*.txt": "text",
    "*.todo": "text"
  },
  "debug.console.fontSize": 16,
  "files.associations": {
    "*.css": "css",
    "css": "css",
    "*.component.css": "css"
    //"*.js": "javascriptreact"
  },
  // "sync.gist": "a89714f4afa0296c545b8cca1fda51a9",
  "settingsSync.ignoredSettings": [],
  "settingsSync.ignoredExtensions": [],
  "liveServer.settings.donotShowInfoMsg": true,
  "omnisharp.path": "latest",
  "glassit.alpha": 230,
  //snippets

  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript"
    // "css": "css"
  },
  "liveServer.settings.donotVerifyTags": true,

  //minimalist
  "breadcrumbs.filePath": "off",
  "breadcrumbs.enabled": false,
  "outline.icons": true,
  "git.openRepositoryInParentFolders": "never"
}
